<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-5 nam">
      <a href="" class="typewrite" style="text-decoration: none; color: #ee7804;" data-period="2000" data-type='[ "Hello",  "नमस्ते","ନମସ୍କାର","ஹலோ", "हेलो", "নমস্কার","హలో","કેમ છો","ಹಲೋ","नमस्कार","ਸਤਿ ਸ਼੍ਰੀ ਅਕਾਲ" ]'>
        <span class="wrap"></span>
      </a>
    </h1>
    <div class="col-6 offset-3 mt-3 mb-3">
        <form action="/" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" required>
                <a href="#">Forgot Password?</a>
            </div>
            <button class="btn btn-success">Login</button>
        </form>
        <hr>

        <div class="div mt-3 mb-3">OR</div>
        <button type="button" class="btn btn-outline-primary" style="width: 43rem; border-radius: 1.1rem;">Login with Google</button>
        <div class="div mt-3 mb-3">OR</div>
        <button type="button" class="btn btn-outline-primary" style="width: 43rem; border-radius: 1.1rem;">Login with Facebook</button>
        <div class="div mt-3 mb-3">OR</div>
        <button type="button" class="btn btn-outline-secondary" style="width: 43rem; border-radius: 1.1rem;">Login with Apple</button>
    </div>
</div>

